<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/appBar_content"
    android:background="@drawable/back_toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingEnd="15dp">

        <Button
            android:id="@+id/back_appBar"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/baseline_arrow_back_ios_new_white_24dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_appBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/more_btn"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_more_vert_black_24dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@android:color/transparent"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>



</androidx.appcompat.widget.Toolbar>